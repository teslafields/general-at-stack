[Unit]
Description=WEG Modem Manager service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/modemapp

#ExecReload=/bin/kill -s HUP $MAINPID

TimeoutSec=0
RestartSec=5
Restart=always

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=modem-app

#StartLimitBurst=3
#StartLimitInterval=10s
KillMode=process

[Install]
WantedBy=multi-user.target
